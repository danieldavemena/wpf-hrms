<UserControl x:Class="wpf_hrms.Views.CredentialsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_hrms.Views"
             mc:Ignorable="d" 
             Loaded="Window_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid Margin="4,0,-4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="487"/>
            </Grid.ColumnDefinitions>



            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label FontSize="25" FontWeight="Bold" Margin="10">Employee Credentials</Label>
                <StackPanel Grid.Row="1" Margin="12" x:Name="credsContainer">

                </StackPanel>
            </Grid>
            <Border Grid.Column="1" Background="#F7ECFC" CornerRadius="0,20,20,0">

                <StackPanel >

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
