<UserControl x:Class="wpf_hrms.Views.CredentialsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_hrms.Views"
             mc:Ignorable="d" 
             Loaded="Window_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="487"/>
            </Grid.ColumnDefinitions>



            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label FontSize="25" FontWeight="Bold" Margin="10" Foreground="#5955B3">Employee Credentials</Label>

                <Border Grid.Row="1" Margin="12,0"  CornerRadius="20" Background="#f7ecfc">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Direction="270" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#5955B3"/>
                            </Style>
                        </Grid.Resources>
                        
                        <Label>
                            ID
                        </Label>

                        <Label Grid.Column="1">
                            Name
                        </Label>
                        <Label Grid.Column="2">
                            Age
                        </Label>

                        <Label Grid.Column="3">
                            Address
                        </Label>

                        <Label Grid.Column="4">
                            Email
                        </Label>
                        <Label Grid.Column="5">
                            Role
                        </Label>
                    </Grid>
                </Border>
                <StackPanel Grid.Row="2" Margin="12" x:Name="credsContainer">

                </StackPanel>
            </Grid>
            <Border Grid.Column="1" Background="#F7ECFC" CornerRadius="0,20,20,0">

                <StackPanel >

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
